# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /about                      controllers.HomeController.about
GET     /products                   controllers.HomeController.products
GET     /product                    controllers.HomeController.product
GET     /purchase                   controllers.HomeController.purchase
GET     /search                     controllers.HomeController.search(query: String ?="All")
GET     /login                      controllers.LoginController.login
POST    /loginSubmit                controllers.LoginController.loginSubmit


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
